@model Genre

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Genre</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger my-2"></div>
        <div class="from-group mb-3 row p-1">
            <label asp-for="Name" class="pb-2"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger my-2"></span>
        </div>
        <div class="row justify-content-between">
            <div class="col-6 col-md-3 px-1">
                <a asp-controller="Genre" asp-area="Admin" asp-action="Index" class="btn btn-outline-secondary form-control">Return</a>
            </div>
            <div class="col-6 col-md-3 px-1">
                <button type="submit" class="btn btn-success form-control">Submit</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}