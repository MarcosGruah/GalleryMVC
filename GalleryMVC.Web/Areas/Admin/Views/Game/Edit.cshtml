@model Game

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Game</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger my-2"></div>
        <div class="from-group mb-3 row p-1">
            <label asp-for="Title" class="pb-2"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger my-2"></span>
        </div>
        <div class="from-group mb-3 row p-1">
            <label asp-for="Developer" class="pb-2"></label>
            <input asp-for="Developer" class="form-control" />
            <span asp-validation-for="Developer" class="text-danger my-2"></span>
        </div>
        <div class="from-group mb-3 row p-1">
            <label asp-for="Publisher" class="pb-2"></label>
            <input asp-for="Publisher" class="form-control" />
            <span asp-validation-for="Publisher" class="text-danger my-2"></span>
        </div>
        <div class="from-group mb-3 row p-1">
            <label asp-for="Price" class="pb-2"></label>
            <input type="number" step="0.01" asp-for="Price" class="form-control no-number-arrows" />
            <span asp-validation-for="Price" class="text-danger my-2"></span>
        </div>
        <div class="row justify-content-between">
            <div class="col-6 col-md-3 px-1">
                <a asp-controller="Game" asp-area="Admin" asp-action="Index" class="btn btn-outline-secondary form-control">Return</a>
            </div>
            <div class="col-6 col-md-3 px-1">
                <button type="submit" class="btn btn-warning form-control">Update</button>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}