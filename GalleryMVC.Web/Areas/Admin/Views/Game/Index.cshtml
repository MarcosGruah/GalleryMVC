@model List<Game>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Game List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Game" asp-area="Admin" asp-action="Upsert" class="btn btn-sm btn-outline-success"><i class="bi bi-plus-circle"></i> Create New Game</a>
        </div>
    </div>

    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr class="text-center">
                @*<th>Game Id</th>*@
                <th class="col-3 bg-primary text-light">Game Name</th>
                <th class="col-2 bg-primary text-light">Developer</th>
                <th class="col-2 bg-primary text-light">Publisher</th>
                <th class="col-2 bg-primary text-light">Price</th>
                <th class="col-3 bg-primary text-light">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    @*@<td>@obj.GameId</td>*@
                    <td class="align-middle ">@obj.Title</td>
                    <td class="align-middle ">@obj.Developer</td>
                    <td class="align-middle ">@obj.Publisher</td>
                    @if(obj.Price == 0.0m)
                    {
                        <td class="align-middle text-center">Free to Play</td>

                    }
                    else
                    {
                        <td class="align-middle text-center">$ @obj.Price</td>

                    }
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Game" asp-area="Admin" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-outline-warning btn btn-sm mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Game" asp-area="Admin" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger btn btn-sm mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
