@model List<Game>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Game List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Game" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Game</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Game Id</th>
                <th>Game Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.GameId</td>
                    <td>@obj.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
